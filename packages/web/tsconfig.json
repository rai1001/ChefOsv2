{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "outDir": "./dist",
    "types": ["vite/client", "reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@culinaryos/core": ["../core"],
      "@culinaryos/core/*": ["../core/*"],
      "@culinaryos/ui": ["../ui/src"],
      "@culinaryos/ui/*": ["../ui/src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.tsx",
    "**/*.stories.ts"
  ],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../ui"
    }
  ]
}
