{
  "name": "@culinaryos/functions",
  "version": "2.0.0",
  "type": "module",
  "description": "Firebase Cloud Functions",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "pnpm build && firebase emulators:start --only functions",
    "shell": "pnpm build && firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@culinaryos/core": "workspace:*",
    "firebase-admin": "^13.0.1",
    "firebase-functions": "^6.1.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": "20"
  }
}
